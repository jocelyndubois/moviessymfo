{% extends '::general.html.twig' %}

{% block body %}
    <table class="table table-responsive" style="width: 80%; margin: auto;">
        <thead>
        <tr>
            <td colspan="3"><h4>Infos générales</h4></td>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td rowspan="6"><img src="https://image.tmdb.org/t/p/w185/{{ movie.posterUrl }}" alt=""/></td>
            <th>Titre original</th>
            <td>{{ movie.originalTitle }}</td>
        </tr>
        <tr>
            <th>Titre</th>
            <td>{{ movie.title }}</td>
        </tr>
        <tr>
            <th>Date de sortie</th>
            <td>{{ movie.releaseDate }}</td>
        </tr>
        <tr>
            <th>Synopsis</th>
            <td>{{ movie.synopsis }}</td>
        </tr>
        <tr>
            <th>Durée</th>
            <td>{{ movie.runtime }} minutes</td>
        </tr>
        <tr>
            <th>Genre(s)</th>
            <td>
                {% for genre in movie.genres %}
                    {{ genre.type }}{% if not loop.last %}, {% endif %}
                {% endfor %}
            </td>
        </tr>
        </tbody>
    </table>

    <br/>

    {% if movie.videos|length > 1 %}
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel" style="height: 370px;">
          <ol class="carousel-indicators">
              {% for video in movie.videos %}
                  <li data-target="#carousel-example-generic" data-slide-to="{{ loop.index0 }}" {% if loop.first %}class="active"{% endif %}></li>
              {% endfor %}
          </ol>
          <div class="carousel-inner" role="listbox">
            {% for video in movie.videos %}
                <div class="item {% if loop.first %}active{% endif %}">
                    <iframe width="560" height="315" src="https://www.youtube.com/embed/{{ video.code }}" frameborder="0" allowfullscreen></iframe>
                </div>
            {% endfor %}
          </div>
          <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
    {% elseif  movie.videos|length == 1 %}
        <iframe width="560" height="315" src="https://www.youtube.com/embed/{{ movie.videos.0.code }}" frameborder="0" allowfullscreen></iframe>
    {% endif %}

    <br/>

    <div style="width: 80%; margin: auto;">
        <span style="display: inline-block; vertical-align: top; width: 45%;">
            <table class="table">
                <thead>
                <tr>
                    <td colspan="4"><h4>Cast</h4></td>
                </tr>
                </thead>
                <tbody>
                {% for cast in movie.cast %}
                    {% if loop.index is not divisible by(2) %}
                        <tr style="height: 55px;">
                    {% endif %}
                            <td><img src="https://image.tmdb.org/t/p/w185/{{ cast.pictureUrl }}" alt="" width="25"/></td>
                            <td>
                                {{ cast.name }}
                            </td>
                    {% if loop.index is divisible by(2) or loop.last %}
                        </tr>
                    {% endif %}
                {% endfor %}
                </tbody>
            </table>
        </span>
        <span style="display: inline-block; vertical-align: top; width: 5%;">&nbsp;</span>
        <span style="display: inline-block; vertical-align: top; width: 45%;">
            <table class="table">
                <thead>
                <tr>
                    <td colspan="4"><h4>Crew</h4></td>
                </tr>
                </thead>
                <tbody>
                {% for crew in movie.crew %}
                    {% if loop.index is not divisible by(2) %}
                        <tr style="height: 55px;">
                    {% endif %}
                            <td><img src="https://image.tmdb.org/t/p/w185/{{ crew.pictureUrl }}" alt="" width="25"/></td>
                            <td>
                                {{ crew.name }}
                            </td>
                    {% if loop.index is divisible by(2) or loop.last %}
                        </tr>
                    {% endif %}
                {% endfor %}
                </tbody>
            </table>
        </span>
    </div>
{% endblock %}